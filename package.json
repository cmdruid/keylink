{
  "name": "keylink-lib",
  "type": "module",
  "version": "1.0.0",
  "description": "Derive keys from virtually anything. Extends the BIP32 wallet format to include many key types and features.",
  "main": "./dist/main.js",
  "unpkg": "./dist/bundle.min.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "import": "./dist/module.js",
    "require": "./dist/main.js"
  },
  "repository": "https://github.com/cmdruid/keylink.git",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "scratch": "node --loader ts-node/esm --no-warnings test/scratch.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "tape": "node --loader ts-node/esm --no-warnings test/index.test.js",
    "test": "nyc --reporter=lcov --require ts-node/register yarn tape | tap-spec; nyc report ---reporter=text",
    "types": "tsc",
    "release": "yarn clean && yarn types && yarn lint && yarn build && yarn test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.13.0",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.52.0",
    "bip32": "^3.1.0",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "nyc": "^15.1.0",
    "rollup": "^3.2.3",
    "tap-spec": "^5.0.0",
    "tape": "^5.6.1",
    "tiny-secp256k1": "^2.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@cmdcode/buff-utils": "^1.2.2",
    "@cmdcode/crypto-utils": "^1.4.5"
  },
  "browser": {
    "crypto": true
  }
}
